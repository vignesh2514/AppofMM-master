<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hme_bg_without_flag"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.motomecha.app.PickService"
    tools:showIn="@layout/activity_pick_service">

   <ScrollView
       android:id="@+id/scroll_vjn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
      android:layout_centerVertical="true"
       android:layout_marginBottom="18dp">

           <TableLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TableRow>
                   <ImageButton
                       android:id="@+id/general_service"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:background="?android:selectableItemBackground"
                       android:layout_width="match_parent"
                       app:srcCompat="@drawable/general"
                       android:layout_height="match_parent"/>
                   <ImageButton
                       android:id="@+id/oil_change"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       android:background="?android:selectableItemBackground"
                       app:srcCompat="@drawable/oil_change"
                       android:layout_height="match_parent"/>
                   <ImageButton
                       android:id="@+id/repair_jobs"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       android:background="?android:selectableItemBackground"
                       app:srcCompat="@drawable/repair"
                       android:layout_height="match_parent"/>
               </TableRow>
               <TableRow>
                   <ImageButton
                       android:id="@+id/water_wash"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       app:srcCompat="@drawable/water"
                       android:background="?android:selectableItemBackground"
                       android:layout_height="match_parent"/>
                   <ImageButton
                       android:id="@+id/tyre_puncture"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       app:srcCompat="@drawable/tyre"
                       android:background="?android:selectableItemBackground"

                       android:layout_height="match_parent"/>
                   <ImageButton
                       android:id="@+id/breakdown_assit"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       android:background="?android:selectableItemBackground"
                       app:srcCompat="@drawable/breakdown"
                       android:layout_height="match_parent"/>
               </TableRow>
               <TableRow>
                   <ImageButton
                       android:id="@+id/vehicle_diag"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       app:srcCompat="@drawable/vehicle"
                       android:background="?android:selectableItemBackground"
                       android:layout_height="match_parent"/>
                   <ImageButton
                       android:id="@+id/insurance_ren"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       app:srcCompat="@drawable/insurance"
                       android:background="?android:selectableItemBackground"
                       android:layout_height="match_parent"/>
                   <ImageButton
                       android:id="@+id/buy_sell_mod"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       android:background="?android:selectableItemBackground"
                       app:srcCompat="@drawable/buy_sell"
                       android:layout_height="match_parent"/>
               </TableRow>
               <TableRow>
                   <ImageButton
                       android:id="@+id/nearest_petrol"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       android:background="?android:selectableItemBackground"
                       app:srcCompat="@drawable/petrol_bunk"
                       android:layout_height="match_parent"/>
                   <ImageButton
                       android:id="@+id/bike_stickern"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       android:background="?android:selectableItemBackground"
                       app:srcCompat="@drawable/bike_sticker"
                       android:layout_height="match_parent"/>
                   <ImageButton
                       android:id="@+id/cuatomer_supp"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       android:layout_width="match_parent"
                       android:background="?android:selectableItemBackground"
                       app:srcCompat="@drawable/customer_support"
                       android:layout_height="match_parent"/>
               </TableRow>
           </TableLayout>


   </ScrollView>
    <TextView
        android:id="@+id/servicetype"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/brandtype"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
